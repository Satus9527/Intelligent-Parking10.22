# 应用基础配置
APP_NAME="智能停车场系统"
APP_ENV="development"  # 必须为: development/test/production
APP_PORT=8080
APP_DEBUG="true"       # 生产环境必须设为"false"

# 数据库配置（必须使用加密连接）
DB_HOST="localhost"
DB_PORT=3306
DB_DATABASE="parking_db"
DB_USERNAME="db_user"
DB_PASSWORD="your_database_password"  # 实际环境中必须使用环境变量注入加密密码

# Redis配置
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DATABASE=0

# 第三方服务配置（必须脱敏存储）
AMAP_API_KEY="your_amap_api_key"  # 高德地图API密钥
WECHAT_APPID="your_wechat_appid"
WECHAT_MCH_ID="your_wechat_mch_id"
LOG_LEVEL="info"  # 必须为: debug/info/warn/error/fatal