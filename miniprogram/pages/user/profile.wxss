/* pages/user/profile.wxss - Glassmorphism Design Style */

.user-container {
  padding: 16px;
  padding-bottom: 80px; /* 为底部导航栏留出空间 */
  background: transparent;
  min-height: calc(100vh - 60px); /* 减去导航栏高度 */
  box-sizing: border-box;
}

/* ============================================
   User Info Card - Glassmorphism
   ============================================ */
.user-info {
  display: flex;
  align-items: center;
  padding: 24px;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 20px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
  margin-bottom: 16px;
  transition: all 0.3s ease;
}

.user-info:active {
  transform: scale(0.99);
  background: rgba(255, 255, 255, 0.8);
}

/* ============================================
   Avatar - Glassmorphism
   ============================================ */
.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 16px;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.4) 0%, rgba(255, 255, 255, 0.2) 100%);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 2px solid rgba(0, 0, 0, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
}

.avatar-icon {
  font-size: 40px;
  color: #1a1a1a;
}

/* ============================================
   User Details - Glassmorphism
   ============================================ */
.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.user-name {
  font-size: 20px;
  font-weight: 700;
  color: #1a1a1a;
  letter-spacing: -0.01em;
  display: block;
}

.user-id {
  font-size: 13px;
  color: rgba(26, 26, 26, 0.7);
  font-weight: 500;
  display: block;
}

/* ============================================
   Menu List - Glassmorphism
   ============================================ */
.menu-list {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 20px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  overflow: hidden;
  box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 24px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  font-size: 15px;
  color: #1a1a1a;
  font-weight: 500;
  transition: background-color 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: rgba(255, 255, 255, 0.8);
}

.menu-item text {
  color: #1a1a1a;
}

.arrow {
  color: rgba(26, 26, 26, 0.7);
  font-size: 18px;
  font-weight: 600;
}

/* ============================================
   Responsive Adjustments
   ============================================ */
@media screen and (min-width: 768px) {
  .user-container {
    padding: 24px;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .user-info {
    padding: 32px;
  }
}
